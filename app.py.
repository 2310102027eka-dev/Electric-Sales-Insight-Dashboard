import React, { useState, useMemo, useEffect } from 'react';
import { generateMockData } from './mockData';
import { SaleRecord, DashboardStats, FilterState } from './types';
import Sidebar from './components/Sidebar';
import KpiCards from './components/KpiCards';
import Charts from './components/Charts';
import { getSalesInsights } from './services/geminiService';

const App: React.FC = () => {
  const [rawData] = useState<SaleRecord[]>(() => generateMockData());
  const [filters, setFilters] = useState<FilterState>({
    startDate: '',
    endDate: '',
    category: 'All'
  });
  const [aiInsight, setAiInsight] = useState<string>('');
  const [isInsightLoading, setIsInsightLoading] = useState(false);

  const filteredData = useMemo(() => {
    return rawData.filter(item => {
      const dateMatch = (!filters.startDate || item.order_date >= filters.startDate) &&
                        (!filters.endDate || item.order_date <= filters.endDate);
      const categoryMatch = filters.category === 'All' || item.product_category === filters.category;
      return dateMatch && categoryMatch;
    });
  }, [rawData, filters]);

  const stats: DashboardStats = useMemo(() => {
    const totalSales = filteredData.reduce((acc, curr) => acc + curr.order_amount, 0);
    const totalUnits = filteredData.reduce((acc, curr) => acc + curr.quantity, 0);
    const returns = filteredData.filter(item => item.return_type !== null).length;
    const returnRatio = filteredData.length > 0 ? returns / filteredData.length : 0;
    const totalRecords = rawData.length;

    const categoryMap: Record<string, number> = {};
    const trendMap: Record<string, number> = {};

    filteredData.forEach(item => {
      categoryMap[item.product_category] = (categoryMap[item.product_category] || 0) + item.order_amount;
      const date = new Date(item.order_date);
      const key = `${date.toLocaleString('default', { month: 'short' })} ${date.getFullYear()}`;
      trendMap[key] = (trendMap[key] || 0) + item.order_amount;
    });

    return {
      totalSales,
      totalUnits,
      returnRatio,
      totalRecords,
      categoryData: Object.entries(categoryMap).map(([name, value]) => ({ name, value })),
      trendData: Object.entries(trendMap).map(([date, amount]) => ({ date, amount }))
    };
  }, [filteredData, rawData]);

  useEffect(() => {
    const fetchInsights = async () => {
      if (filteredData.length === 0) {
        setAiInsight("No data available for the selected filters.");
        return;
      }
      setIsInsightLoading(true);
      const insight = await getSalesInsights(stats);
      setAiInsight(insight);
      setIsInsightLoading(false);
    };

    const timeout = setTimeout(fetchInsights, 1000); // Debounce AI calls
    return () => clearTimeout(timeout);
  }, [stats]);

  return (
    <div className="flex min-h-screen bg-slate-50 text-slate-900">
      <Sidebar 
        filters={filters} 
        setFilters={setFilters} 
        categories={Array.from(new Set(rawData.map(d => d.product_category)))}
      />
      
      <main className="flex-1 p-4 md:p-8 lg:p-10 overflow-y-auto">
        <header className="mb-8 flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
          <div>
            <h1 className="text-3xl font-extrabold tracking-tight text-slate-900">Sales Intelligence</h1>
            <p className="text-slate-500 mt-1">Advanced monitoring for [datapenjualanbaru] database.</p>
          </div>
          <div className="flex items-center gap-3">
            <span className="flex h-2 w-2 rounded-full bg-emerald-500 animate-pulse"></span>
            <span className="text-sm font-semibold text-slate-600">Connected to Database</span>
          </div>
        </header>

        <KpiCards stats={stats} />

        <div className="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-8">
          <div className="lg:col-span-2 bg-white p-6 rounded-2xl shadow-sm border border-slate-200">
            <div className="flex justify-between items-center mb-6">
              <h2 className="text-lg font-bold text-slate-800">Monthly Revenue Trend</h2>
              <span className="text-xs text-slate-400 font-medium">Auto-updated</span>
            </div>
            <Charts.TrendChart data={stats.trendData} />
          </div>
          <div className="bg-white p-6 rounded-2xl shadow-sm border border-slate-200">
            <h2 className="text-lg font-bold text-slate-800 mb-6">Category Performance</h2>
            <Charts.CategoryPieChart data={stats.categoryData} />
          </div>
        </div>

        <section className="relative overflow-hidden bg-white p-8 rounded-2xl shadow-sm border border-slate-200">
          <div className="absolute top-0 right-0 p-4 opacity-10">
            <svg className="w-24 h-24 text-indigo-600" fill="currentColor" viewBox="0 0 24 24">
               <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5" />
            </svg>
          </div>
          
          <div className="relative z-10">
            <div className="flex items-center gap-3 mb-6">
              <div className="p-2 bg-indigo-600 rounded-lg shadow-md shadow-indigo-200">
                <svg xmlns="http://www.w3.org/2000/svg" className="h-5 w-5 text-white" viewBox="0 0 20 20" fill="currentColor">
                  <path fillRule="evenodd" d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z" clipRule="evenodd" />
                </svg>
              </div>
              <h2 className="text-xl font-bold text-slate-900 tracking-tight">AI Executive Insight</h2>
            </div>
            
            <div className="bg-slate-50 rounded-xl p-6 border border-slate-100 min-h-[120px]">
              {isInsightLoading ? (
                <div className="flex flex-col items-center justify-center py-4 space-y-3">
                  <div className="flex space-x-2">
                    <div className="h-2 w-2 bg-indigo-600 rounded-full animate-bounce [animation-delay:-0.3s]"></div>
                    <div className="h-2 w-2 bg-indigo-600 rounded-full animate-bounce [animation-delay:-0.15s]"></div>
                    <div className="h-2 w-2 bg-indigo-600 rounded-full animate-bounce"></div>
                  </div>
                  <p className="text-sm text-indigo-600 font-medium animate-pulse italic">Thinking like a data scientist...</p>
                </div>
              ) : (
                <div className="text-slate-700 leading-relaxed space-y-2 whitespace-pre-line font-medium">
                  {aiInsight}
                </div>
              )}
            </div>
          </div>
        </section>
      </main>
    </div>
  );
};

export default App;
